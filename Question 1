#include <iostream>
using namespace std;

int countWords(char* str) {
    int count = 0;
    bool inWord = false;
    
    while (*str) {
        if (*str == ' ' || *str == '\t' || *str == '\n') {
            inWord = false;
        } else if (!inWord) {
            inWord = true;
            count++;
        }
        str++;
    }
    
    return count;
}

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);
    
    char* ptr = str;
    int words = countWords(ptr);
    
    cout << "Number of words: " << words << endl;
    
    return 0;
}
