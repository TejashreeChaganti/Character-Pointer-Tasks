#include <iostream>
using namespace std;

int countCharacters(char* str) {
    int count = 0;
    
    while (*str) {
        count++;
        str++;
    }
    
    return count;
}

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);
    
    char* ptr = str;
    int chars = countCharacters(ptr);
    
    cout << "Number of characters: " << chars << endl;
    
    return 0;
}
