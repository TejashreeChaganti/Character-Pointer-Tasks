#include <iostream>
using namespace std;

void reverseString(char* str) {
    char* start = str;
    char* end = str;
    
    // Find the end of string
    while (*end) {
        end++;
    }
    end--;
    
    // Swap characters from both ends
    while (start < end) {
        char temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin.getline(str, 100);
    
    char* ptr = str;
    reverseString(ptr);
    
    cout << "Reversed string: " << str << endl;
    
    return 0;
}
